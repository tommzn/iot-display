{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "arn:aws:iot:<AwsRegion>:<AwsAccountId>:client/${iot:Connection.Thing.ThingName}"
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Publish"
      ],
      "Resource": [
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topic/$aws/things/<ThingName>/shadow/name/<ShadowName>/get",
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topic/$aws/things/<ThingName>/shadow/name/<ShadowName>/update",
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topic/iot-display/logs"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Receive"
      ],
      "Resource": [
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topic/$aws/things/<ThingName>/shadow/name/<ShadowName>/get/accepted",
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topic/$aws/things/<ThingName>/shadow/name/<ShadowName>/get/rejected",
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topic/$aws/things/<ThingName>/shadow/name/<ShadowName>/update/rejected",
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topic/iot-display/contents"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Subsribe"
      ],
      "Resource": [
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topicfilter/$aws/things/<ThingName>/shadow/name/<ShadowName>/get/accepted",
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topicfilter/$aws/things/<ThingName>/shadow/name/<ShadowName>/get/rejected",
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topicfilter/$aws/things/<ThingName>/shadow/name/<ShadowName>/update/rejected",
        "arn:aws:iot:<AwsRegion>:<AwsAccountId>:topicfilter/iot-display/contents"
      ]
    }
  ]
}